{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ESNext"],
    "target": "ES2022",
    "module": "ES6",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },

  "exclude": ["node_modules/**/*", "docs/", "perf/"],

  "typedoc": {
    "out": "docs",
    "gitRevision": "main"
  }
}
